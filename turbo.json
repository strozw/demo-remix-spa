{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env", ".env.local"],
  "globalEnv": ["NOTES_DB", "NOTES_API_ALLOW_ORIGIN"],
  "tasks": {
    "build": {
      "outputs": ["dist/**", "build/**"],
      "cache": true
    },
    "build-dev": {
      "cache": false
    },
    "dev": {
      "dependsOn": ["build-dev"],
      "persistent": true,
      "cache": false
    },
    "test": {
      "cache": false
    },
    "check-types": {
      "cache": false
    },
    "start": {
      "dependsOn": ["build"],
      "persistent": true,
      "cache": false
    },
    "build-storybook": {
      "dependsOn": ["build"],
      "outputs": ["storybook-static/**"],
      "cache": true
    },
    "storybook": {
      "dependsOn": ["build-dev"],
      "persistent": true,
      "cache": false
    }
  }
}
