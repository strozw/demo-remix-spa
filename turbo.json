{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "outputs": ["dist/**"],
      "cache": true
    },
		"build-dev": {
      "outputs": ["dist/**"],
      "cache": true
		},
    "dev": {
      "dependsOn": ["build-dev"],
      "persistent": true,
      "cache": false
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "preview": {
      "persistent": true,
      "cache": false
    }
  }
}
