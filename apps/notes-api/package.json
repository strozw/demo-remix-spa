{
  "name": "@demo-remix-spa/notes-api",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": "./dist/bin.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./bin.js": {
      "import": "./dist/bin.js",
      "types": "./dist/bin.d.ts"
    }
  },
  "scripts": {
    "build": "vite build",
    "build-dev": "NODE_ENV=development vite build --sourcemap inline --emptyOutDir false",
    "start": "node ./dist/bin.js",
    "watch": "wait-on ./dist/bin.js && node --watch ./dist/bin.js",
    "dev": "pnpm run build-dev --watch & pnpm run watch",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.1",
    "@hono/zod-validator": "^0.4.1",
    "lowdb": "^7.0.1"
  },
  "devDependencies": {
    "@hono/vite-build": "^1.1.0",
    "@types/node": "^20.2.5",
    "typescript": "^5.6.2"
  }
}
